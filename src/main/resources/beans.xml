<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "HelloWorldPrototype" class = "com.xiaomingyk.myspring.HelloWorld" scope="prototype">
        <property name = "message" value = "Hello World! friends!"/>
    </bean>

    <bean id = "HelloWorldSingleton" class = "com.xiaomingyk.myspring.HelloWorld" scope="singleton">
        <property name = "message" value = "Hello World! single!"/>
    </bean>

</beans>